<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/Apallet1"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textColor="#fff"
                android:text="OFFER NOTICE"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="#545454"
                android:id="@+id/offerid"
                android:text="Offer ID : 14007379"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#303030"
                android:id="@+id/offeredshop"
                android:text="Offered Shop : 14007379"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/offerstart"
                android:textColor="#08a909"
                android:text="Valid From : 28/10/1996"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/offerend"
                android:textColor="#ff2b00"
                android:text="Valid Until : 18/10/2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textAllCaps="true"
            android:textSize="20dp"
            android:id="@+id/offertitle"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:text="MEGA DISCOUNT SALE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/offerdesc"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:text="Grab Exciting offers today..! Hurryup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:textColor="#fff"
                android:text="LOCATE THIS SHOP"
                android:background="@color/Apallet2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:textColor="#fff"
                android:background="@color/Apallet1"
                android:text="SHOP PRODUCTS"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>