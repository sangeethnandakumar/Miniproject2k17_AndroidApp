<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nasa.nearby.LogInActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    style="@style/AppTheme"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="LOG IN YOUR ACCOUNT"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <com.beardedhen.androidbootstrap.BootstrapWell
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:bootstrapSize="sm">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="You need to LogIn to continue"/>
                </com.beardedhen.androidbootstrap.BootstrapWell>
                <ImageView
                    android:src="@drawable/new_login"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:weightSum="8"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textAlignment="textStart"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="Username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:hint="Enter username"
                        android:inputType="textPersonName"
                        android:id="@+id/login_username"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bootstrapSize="md"
                        app:bootstrapBrand="info"
                        app:roundedCorners="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="8"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textAlignment="textStart"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="Password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:hint="Enter password"
                        android:inputType="textPassword"
                        android:id="@+id/login_password"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bootstrapSize="md"
                        app:bootstrapBrand="info"
                        app:roundedCorners="true"
                        />
                </LinearLayout>
                <CheckBox
                    android:layout_marginLeft="10dp"
                    android:id="@+id/login_staylogin"
                    android:text="Stay logged in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/opensettings"
                    android:layout_marginLeft="10dp"
                    android:textColor="#3b26ff"
                    android:text="Open Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/login_signupbutton"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="SignUp"
                        app:bootstrapBrand="secondary"
                        app:bootstrapSize="lg"
                        app:buttonMode="regular"
                        app:showOutline="false"
                        app:roundedCorners="true" />
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/login_loginbutton"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="LogIn"
                        app:bootstrapBrand="success"
                        app:bootstrapSize="lg"
                        app:buttonMode="regular"
                        app:showOutline="false"
                        app:roundedCorners="true"/>
                </LinearLayout>
                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:visibility="gone"
                    android:id="@+id/login_progressbar"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:animated="true"
                    app:bootstrapBrand="primary"
                    app:bootstrapProgress="1"
                    app:striped="true"/>
                <com.beardedhen.androidbootstrap.BootstrapWell
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:bootstrapSize="sm">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Create an account if you don't have one"/>
                </com.beardedhen.androidbootstrap.BootstrapWell>
            </LinearLayout>
    </ScrollView>





</RelativeLayout>
