<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nasa.nearby.LogInActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    style="@style/AppTheme"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="SIGNUP YOUR ACCOUNT"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <com.beardedhen.androidbootstrap.BootstrapWell
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:bootstrapSize="sm">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="You need to create an account"/>
                </com.beardedhen.androidbootstrap.BootstrapWell>
                <ImageView
                    android:src="@drawable/new_account"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:weightSum="8"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textAlignment="textStart"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="Firstname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:hint="Firstname here"
                        android:id="@+id/signup_fname"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bootstrapSize="md"
                        app:bootstrapBrand="info"
                        app:roundedCorners="true"
                        android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="8"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textAlignment="textStart"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="Lastname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:hint="Lastname here"
                        android:id="@+id/signup_lname"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bootstrapSize="md"
                        app:bootstrapBrand="info"
                        app:roundedCorners="true"
                        android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="8"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textAlignment="textStart"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="Username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:hint="Username here"
                        android:id="@+id/signup_username"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bootstrapSize="md"
                        app:bootstrapBrand="info"
                        app:roundedCorners="true"
                        android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="8"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:textAlignment="textStart"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="Password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:typeface="normal"
                        android:hint="Password here"
                        android:id="@+id/signup_password"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bootstrapSize="md"
                        app:bootstrapBrand="info"
                        app:roundedCorners="true"
                        android:inputType="textPassword"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/signup_signupbutton"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="SignUp Account"
                        app:bootstrapBrand="success"
                        app:bootstrapSize="lg"
                        app:buttonMode="regular"
                        app:showOutline="false"
                        app:roundedCorners="true"/>
                </LinearLayout>
                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:visibility="gone"
                    android:id="@+id/signup_progressbar"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:animated="true"
                    app:bootstrapBrand="primary"
                    app:bootstrapProgress="1"
                    app:striped="true"/>
                <com.beardedhen.androidbootstrap.BootstrapWell
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:bootstrapSize="sm">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="You need to LogIn to continue"/>
                </com.beardedhen.androidbootstrap.BootstrapWell>
            </LinearLayout>
    </ScrollView>




</RelativeLayout>
